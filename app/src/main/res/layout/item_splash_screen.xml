<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/warm_gray_900"
    android:layoutDirection="rtl">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_gray_900"
        android:padding="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/gray_900"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_itemSplash"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/movie_intro" />


                <TextView
                    android:id="@+id/tv_itemSplash_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:justificationMode="inter_word"
                    android:lineHeight="@dimen/_20sdp"
                    android:padding="@dimen/_12sdp"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="UnusedAttribute"
                    tools:text="با خرید اشتراک مووی استریمینگ  به تعداد زیادی فیلم و سریال و انیمیشن دسترسی داشته باشید و چیزی را از قلم نیندازید" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>