<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/warm_gray_900"
    app:cardBackgroundColor="@color/warm_gray_900"
    app:cardCornerRadius="@dimen/_4sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_watchAllMovie"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardBackgroundColor="@color/gray_900"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintEnd_toStartOf="@id/iv_watchAllMovie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                tools:ignore="RtlSymmetry">


                <TextView
                    android:id="@+id/tv_watchAllMovies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RelativeOverlap" />


                <ImageView
                    android:id="@+id/iv_watchAllMovie_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_baseline_bookmark_add_24" />


                <LinearLayout
                    android:id="@+id/ll_watchAllMovies_director"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_watchAllMovie_bookmark"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_watchAllMovies_director"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_10sdp"
                        tools:text="Dan Moradi" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:text="@string/Director"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_watchAllMovies_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_watchAllMovies_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/ic_baseline_access_time_24"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/tv_watchAllMovies_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/iranian_sans"
                        android:text="01 : 32 "
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_watchAllMovie_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/ll_watchAllMovies_rate"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@id/ll_watchAllMovies_rate"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/ic_baseline_star_24" />

                <LinearLayout
                    android:id="@+id/ll_watchAllMovies_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_8ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_watchAllMovies_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="9 / 10"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2.3k"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_8ssp" />


                </LinearLayout>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_watchAllMovie"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:scaleType="fitXY"
            android:src="@drawable/genre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/_4sdp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>