<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_main_genre"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_55sdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_10sdp" />

    <com.makeramen.roundedimageview.RoundedImageView

        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_55sdp"
        android:alpha="0.6"
        android:background="@drawable/genre_radius"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_genre_tittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_20sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_genre"
        app:layout_constraintEnd_toEndOf="@+id/iv_main_genre"
        app:layout_constraintStart_toStartOf="@id/iv_main_genre"
        app:layout_constraintTop_toTopOf="@+id/iv_main_genre"
        tools:text="Movie" />


</androidx.constraintlayout.widget.ConstraintLayout>